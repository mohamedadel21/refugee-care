<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.mohammed.refugeecare.SignInActivityFragment"
    tools:showIn="@layout/activity_sign_in"
    android:background="#00c9c6"
    android:fillViewport="true">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
>


    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailEditText"
            android:layout_gravity="right|top"
            android:background="@drawable/edittext"
            android:hint="Email"
            android:gravity="center"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="80dp" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edpassworditText"
            android:layout_gravity="right|top"
            android:background="@drawable/edittext"
            android:hint="Password"
            android:gravity="center"
        android:layout_below="@+id/emailEditText"
        android:layout_alignLeft="@+id/emailEditText"
        android:layout_alignStart="@+id/emailEditText"
        android:layout_marginTop="15dp"
        android:layout_alignRight="@+id/emailEditText"
        android:layout_alignEnd="@+id/emailEditText" />

        <Button
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:text="Sign in "
            android:id="@+id/LoginButton"
           style="@style/SigninAppTheme"
            android:textColor="#fff"
            android:textSize="14dp"
            android:layout_gravity="left|top"
            android:background="@drawable/shape"
            android:layout_below="@+id/edpassworditText"
            android:layout_alignLeft="@+id/edpassworditText"
            android:layout_alignStart="@+id/edpassworditText"
            android:layout_marginTop="10dp"
            android:layout_alignRight="@+id/edpassworditText"
            android:layout_alignEnd="@+id/edpassworditText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in with facebook"
            android:id="@+id/SigninWithGoogleFacebookButton"

            android:background="@drawable/facebookbuttin"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal|bottom"

            android:layout_below="@+id/SigninWithGoogleButton"
            android:layout_alignLeft="@+id/SigninWithGoogleButton"
            android:layout_alignStart="@+id/SigninWithGoogleButton"
            android:layout_alignRight="@+id/SigninWithGoogleButton"
            android:layout_alignEnd="@+id/SigninWithGoogleButton"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

        <com.google.android.gms.common.SignInButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Sign in with google"
            android:id="@+id/SigninWithGoogleButton"

            android:textColor="#757575"
            android:layout_gravity="center"

            android:layout_below="@+id/LoginButton"
            android:layout_alignLeft="@+id/LoginButton"
            android:layout_alignStart="@+id/LoginButton"
            android:layout_alignRight="@+id/edpassworditText"
            android:layout_alignEnd="@+id/edpassworditText"
            android:textSize="14dp"
            android:background="@drawable/googlesigninbutton"
            android:layout_marginTop="10dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:text="REFUGEE CARE"
        android:layout_marginTop="77dp"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:textSize="22dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Forgot my password"
        android:id="@+id/ForgotmypasswordButton"
        android:layout_marginTop="15dp"
        android:textSize="16dp"
        style="@style/SigninAppTheme"

        android:gravity="center"
        android:textColor="#fff"
        android:layout_below="@+id/SigninWithGoogleFacebookButton"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:id="@+id/SignupButton"
        android:textColor="#fff"
        android:textSize="14dp"
        android:layout_gravity="left|top"
        android:background="@drawable/shape1"
        android:textStyle="bold"
        style="@style/SigninAppTheme"
        android:layout_below="@+id/ForgotmypasswordButton"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_below="@+id/LoginButton"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
</ScrollView>