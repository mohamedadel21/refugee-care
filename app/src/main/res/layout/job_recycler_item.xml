<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/feed_item_margin"
            android:layout_marginRight="@dimen/feed_item_margin"
            android:layout_marginTop="@dimen/feed_item_margin"
            android:background="@drawable/bg_parent_rounded_corner"
            android:orientation="vertical"
            android:paddingTop="@dimen/feed_item_padding_top_bottom"
            >
        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/feed_item_padding_left_right"
            android:paddingRight="@dimen/feed_item_padding_left_right"
            android:layout_weight="3">

            <ImageButton
                android:id="@+id/img_user_profile_pic"
                android:layout_width="@dimen/feed_item_profile_pic"
                android:layout_height="@dimen/feed_item_profile_pic"
                android:scaleType="fitCenter"
                android:src="@drawable/bg_parent_rounded_corner"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/feed_item_profile_info_padd" >

                <TextView
                    android:id="@+id/text_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/feed_item_profile_name"
                    android:textStyle="bold"
                    android:hint="user name"
                    />

                <TextView
                    android:id="@+id/text_time_stamp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/timestamp"
                    android:textSize="@dimen/feed_item_timestamp"
                    android:hint="time / place"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/feed_item_margin">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Imgbutton_call"
                android:background="@drawable/empty_button"
                android:src="@android:drawable/sym_action_call"
                android:layout_marginRight="@dimen/feed_item_margin"
                android:padding="@dimen/small_vertical_margin"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="follow +"
                android:id="@+id/button_follow"
                android:background="@drawable/button_raduis"
                android:layout_gravity="right"
                android:foregroundGravity="right"
                android:textColor="@color/white"
                android:padding="@dimen/small_vertical_margin"/>

        </LinearLayout>
    </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/feed_item_margin"
                android:layout_marginTop="@dimen/small_vertical_margin"
                android:layout_marginRight="@dimen/small_vertical_margin">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Job Title   "
                    android:id="@+id/textView"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_weight="2.5"
                    android:textIsSelectable="false"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="accountant"
                    android:id="@+id/text_job_title"
                    android:layout_weight="6"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_dark"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_vertical_margin"
                android:layout_marginLeft="@dimen/feed_item_margin"
                android:layout_marginTop="@dimen/feed_item_margin">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="company    "
                    android:id="@+id/textView5"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_weight="2.5"
                    android:textIsSelectable="false"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="abc for travle"
                    android:id="@+id/text_job_company"
                    android:layout_weight="6"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_dark"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/feed_item_margin"
                android:layout_marginTop="@dimen/small_vertical_margin"
                android:layout_marginRight="@dimen/small_vertical_margin">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Location     "
                    android:id="@+id/textView7"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_weight="2.5"
                    android:textIsSelectable="false"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="egypt / cairo"
                    android:id="@+id/text_job_location"
                    android:layout_weight="6"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_dark"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/feed_item_margin"
                android:layout_marginTop="@dimen/small_vertical_margin"
                android:layout_marginRight="@dimen/small_vertical_margin">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="applay Date"
                    android:id="@+id/textView4"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_weight="2.5"
                    android:textIsSelectable="false"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="2016-04-18 "
                    android:id="@+id/text_job_date"
                    android:layout_weight="6"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_dark"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/feed_item_margin"
                android:layout_marginTop="@dimen/small_vertical_margin"
                android:layout_marginRight="@dimen/small_vertical_margin">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Link "
                    android:id="@+id/textView9"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_weight="2.5"
                    android:textIsSelectable="false"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="http://wuzzuf.net/internship/42941-Web-Design-Intern---Internship-Edfa3ly-Cairo-Egypt"
                    android:id="@+id/tetx_job_url"
                    android:layout_weight="6"
                    android:textSize="14sp"
                    android:textColor="@color/link"
                    android:padding="3dp"
                    android:textStyle="italic"
                    android:gravity="center"/>
            </LinearLayout>

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/like_comment_write"/>


        </LinearLayout>


</android.support.v7.widget.CardView>